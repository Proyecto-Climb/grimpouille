<h1>Home</h1>

<%= form_with url: recommendations_path, method: :get do |form| %>
  <%= form.label :query, "Select a route to project" %>
  <%= form.collection_select :route_id, @defined_routes, :id, :name %>
  <%= form.submit "Search" %>
<% end %>

<% if @response %>
  <%= @response %>
<% else %>
  <%= @error_message %>
<% end %>
